---
import clsx from "clsx";

type Props = {
  level: "h1" | "h2" | "h3";
};

const { level } = Astro.props;

const className = {
  h1: "text-4xl sm:text-5xl",
  h2: "text-3xl sm:text-4xl",
  h3: "text-2xl sm:text-xl",
}[level];
---

<div class="text-center">
  <h2 class={className}><slot /></h2>
</div>
