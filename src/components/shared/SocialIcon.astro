---
import { Image } from "astro:assets";
import facebookImageSrc from "../../assets/social/facebook.svg";
import instagramImageSrc from "../../assets/social/instagram.svg";
import linkedinImageSrc from "../../assets/social/linkedin.svg";
import twitterImageSrc from "../../assets/social/twitter.svg";

const social = {
  facebook: {
    name: "Facebook",
    imageSrc: facebookImageSrc,
  },
  instagram: {
    name: "Instagram",
    imageSrc: instagramImageSrc,
  },
  linkedin: {
    name: "LinkedIn",
    imageSrc: linkedinImageSrc,
  },
  x: {
    name: "X",
    imageSrc: twitterImageSrc,
  },
};

type Props = {
  name: keyof typeof social;
};

const socialFound = social[Astro.props.name].imageSrc;
---

{
  socialFound ? (
    <Image
      class="max-h-[40px] h-[40px] max-w-[40px] w-[40px] m-auto"
      src={social[Astro.props.name].imageSrc}
      width="40"
      height="40"
      alt=""
    />
  ) : null
}
